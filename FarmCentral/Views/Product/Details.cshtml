@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
    </nav>
    <section class="bg-white space-sm">
        <div class="container">
            <div class="row">
                <!--end of col-->
                <div class="col-lg-4 d-flex flex-column justify-content-between mr-auto ml-auto">
                    <div>
                        <h1 class="mb-2">@Model.ProductName</h1>
                        <h2 class="lead mb-3">@Model.PricePerUnit ZAR p.u.</h2>
                    </div>
                    <div>
                        <div class="btn-group mb-2">
                            <button type="button" class="btn btn-success btn-lg">Order</button>
                            <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split dropdown-toggle-no-arrow" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="icon-dots-three-horizontal"></i>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-sm">
                                <a class="dropdown-item" href="#">1 Pack (6)</a>
                                <a class="dropdown-item" href="#">4 Packs (30)</a>
                                <a class="dropdown-item" href="#">1/4 Pallet (216)</a>@*Quarter pallet*@
                                <a class="dropdown-item" href="#">Full Pallet (864)</a>@*full pallet*@
                            </div>
                        </div>
                    </div>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
    <section class="space-sm">
        <div class="container">
                <!--end of col-->
                <div class="col-12 col-md-4">

                    <div class="card">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div><i class="icon-text-document mr-1"></i>Manufactoring Date</div>
                                    <span>@Model.ManufactorDate</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div><i class="icon-edit mr-1"></i>Best Before Date</div>
                                    <span>@Model.BestBeforeDate</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div><i class="icon-thumbs-up mr-1"></i>Farmer</div>
                                    <span>@Model.Farmer</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div><i class="icon-share mr-1"></i>Available</div>
                                    <span>@Model.Quantity</span>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- end card -->
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>

@{
}
<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" type="text" class="form-control" id="ProductName" placeholder="Product Name">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ManufactorDate">Manufator Date</label>
        <input asp-for="ManufactorDate" type="date" class="form-control" id="ManufatorDate" placeholder="">
        <span asp-validation-for="ManufactorDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BestBeforeDate">Best Before Date</label>
        <input asp-for="BestBeforeDate" type="date" class="form-control" id="BestBeforeDate" placeholder="">
        <span asp-validation-for="BestBeforeDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" id="Quantity" placeholder="">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerUnit">Price Per Unit</label>
        <input asp-for="PricePerUnit" type="number" class="form-control" id="PricePerUnit" placeholder="">
        <span asp-validation-for="PricePerUnit" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>